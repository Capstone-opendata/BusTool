    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textColor="#000000"
            android:text="@string/filterTextView" />

        <Spinner
            android:id="@+id/filter_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip">

        </Spinner>

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/result_table_layout"
        android:layout_above="@+id/LinearLayout02"
        android:layout_below="@+id/LinearLayout01">

        <!-- The first title row -->
        <TableRow android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Line"
                android:gravity="center"
                android:padding="3dip"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Destination"
                android:layout_width="0px"
                android:layout_weight="0.6"
                android:paddingTop="3dip"
                android:paddingLeft="10dip"
                android:layout_height="match_parent" />
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="ETA"
                android:layout_width="0px"
                android:layout_weight="0.3"
                android:padding="3dip"
                android:layout_height="match_parent" />
        </TableRow>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:layout_above="@+id/LinearLayout02"
            android:layout_alignParentTop="true">

            <TableLayout
                android:id="@+id/ScrollableTableLayout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:isScrollContainer="true">

            <!-- The second row and first for stop data -->
                <!--
            <TableRow android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text=""
                    android:padding="3dip"
                    android:gravity="center"
                    android:id="@+id/result_line_1"/>
                <TextView
                    android:text=""
                    android:padding="3dip"
                    android:layout_width="0px"
                    android:layout_weight="0.4"
                    android:id="@+id/result_destination_1"/>
                <TextView
                    android:text=""
                    android:padding="3dip"
                    android:layout_width="0px"
                    android:layout_weight="0.4"
                    android:id="@+id/result_eta_1"/>
            </TableRow>
            -->

            </TableLayout>
        </ScrollView>
    </TableLayout>

    <LinearLayout
        android:id="@+id/LinearLayout02"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/RefreshButton"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="ManualRefresh"
            android:text="Refresh">
        </Button>

        <Button
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to search"
            android:id="@+id/button6"
            android:layout_weight="1"
            android:onClick="GoToToolSelectionActivity" />

    </LinearLayout>

</RelativeLayout>

